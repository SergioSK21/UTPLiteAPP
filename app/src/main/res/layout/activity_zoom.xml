<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/zoom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reuniones de Zoom"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#D50000"
        android:layout_marginBottom="16dp"/>

    <!-- Card de cada reunión -->
    <androidx.cardview.widget.CardView
        android:id="@+id/zoom_meeting_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/meeting_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programación I - Clase en Vivo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/meeting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viernes 7 de junio, 10:00 AM"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/join_meeting_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unirse a la reunión"
                android:textAllCaps="false"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

