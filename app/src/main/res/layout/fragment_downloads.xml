<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/downloads_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- TÃ­tulo superior -->
    <TextView
        android:id="@+id/downloads_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descargas"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#D50000"
        android:layout_gravity="left"
        android:paddingBottom="16dp" />

    <!-- Scroll con paquetes para descargar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <GridLayout
            android:id="@+id/packages_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Paquete 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/package_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descargar paquete 1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Paquete 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/package_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descargar paquete 2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Paquete 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/package_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descargar paquete 3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Paquete 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/package_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descargar paquete 4"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </ScrollView>

</LinearLayout>
